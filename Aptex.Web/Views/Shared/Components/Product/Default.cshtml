@using Aptex.ViewModels
@model ProductViewModel



<div class="card" style="width: 18rem;">
    @*@<img src="..." class="card-img-top"/> *@
    <div class="card-body">
        <h3>@Model.ProductName</h3>
        <h5>@Model.Quantity</h5>
        <p>@Model.Price</p>

        <div class="container">
            <div class="row">
                <div class="col-xs-2 col-xs-offset-2">
                    <div class="input-group number-spinner">
                        <span class="input-group-btn">
                            <button class="btn btn-success" data-dir="dwn">
                                <span>-</span>
                            </button>
                        </span>
                        <input type="text" class="form-control text-center" value="0">
                        <span class="input-group-btn">
                            <button class="btn btn-success" data-dir="up">
                                <span>+</span>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="card-link pull-right">Add</a>
    </div>
</div>

<script>
    $(document).on('click', '.number-spinner button', function () {    
        var btn = $(this),
            oldValue = btn.closest('.number-spinner').find('input').val().trim(),
            newVal = 0;
	
        if (btn.attr('data-dir') === 'up') {
            newVal = parseInt(oldValue) + 1;
        }
        else {
            if (oldValue > 0) {
                newVal = parseInt(oldValue) - 1;
            }
            else {
                newVal = 0;
            }
        }

        btn.closest('.number-spinner').find('input').val(newVal);
    });
</script>