@model Aptex.Contracts.ViewModels.ProductViewModel

@Html.HiddenFor(m => m.ProductId)

<div class="form-group row">
    <label for="productNameInput" class="col-sm-2 col-form-label">Product name</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @id = "productNameInput", @placeholder = "E.g. Aspirine C" })
        @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group row">
    <label for="leafletInput" class="col-sm-2 col-form-label">Leaflet</label>
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.ProductReception, new { @class = "form-control", @id = "leafletInput", @rows = "3" })
    </div>
</div>

<div class="form-group row">
    <label for="imgInput" class="col-sm-2 col-form-label">Image</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", @id = "imgInput", @placeholder = "http:/this.com/is_my_img.png" })
    </div>
</div>

<div class="form-group row">
    <label for="priceInput" class="col-sm-2 col-form-label">Price</label>
    <div class="col-sm-10">
        <div class="input-group mb-2 mr-sm-2">

            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @id = "priceInput" })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            <div class="input-group-append">
                <div class="input-group-text">zł</div>
            </div>
        </div>
    </div>
</div>

<div class="form-group row">
    <label for="quantityInput" class="col-sm-2 col-form-label">Quantity</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", @id = "quantityInput", @placeholder = "10szt" })
        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group row">
    <label for="categorySelect" class="col-sm-2 col-form-label">Category</label>
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.CategoryId, Model.Categories, new { @class = "form-control", @id = "categorySelect" })
    </div>
</div>

<div class="form-group row">
    <label for="onPrescriptionCheck" class="col-sm-2">Is on prescription</label>
    <div class="col-sm-10">
        @Html.EditorFor(m => m.OnPrescription, new { @class = "form-control", @id = "onPrescriptionCheck" })
    </div>
</div>