@model Aptex.Contracts.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Add";
    Layout = "_Layout";
}

@using (Html.BeginForm("Add", "Products", new { @id = "addForm" }))
{
    <div class="container form-group" style="margin: auto; width: 70%">
        <h3 style="margin-bottom: 20px;">Add product</h3>
        <partial name="_ProductDetails" model="Model" />
        
        <div id="confirmReset" class="modal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Warning</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        All the data will be reset.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                        <button id="resetFormBtn" class="btn btn-danger" data-dismiss="modal">Reset</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="float-right">
            <button type="button" class="btn btn-light" data-toggle="modal" data-target="#confirmReset">Reset</button>
            <button type="submit" class="btn btn-success">Add</button>
        </div>
    </div>
}